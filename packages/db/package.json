{
  "name": "@possiblewebsite/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "prebuild": "pnpm prisma:generate",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "prisma:generate": "DATABASE_URL=postgresql://user:password@localhost:5432/possiblewebsite prisma generate --schema prisma/schema.prisma",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "@prisma/client": "^5.11.0",
    "dotenv": "^16.4.5",
    "otplib": "^12.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "20",
    "jest": "^29.7.0",
    "prisma": "^5.11.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.1"
  }
}
